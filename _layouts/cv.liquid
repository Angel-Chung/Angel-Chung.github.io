{% comment ------------------------------------------------------------------
  cv.liquid  – simple viewer + download
  Required front-matter keys on the page using this layout:
      title    : Page title
      cv_pdf   : Filename (e.g. AngelCV.pdf) relative to assets/pdf/
      description (optional)
-------------------------------------------------------------------------%}
{% endcomment %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title | default: "CV" }}
      {%- if page.cv_pdf -%}
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
           target="_blank" rel="noopener"
           class="float-right" aria-label="Download PDF">
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {%- endif -%}
    </h1>

    {%- if page.description -%}
      <p class="post-description">{{ page.description }}</p>
    {%- endif -%}
  </header>

  {%- if page.cv_pdf -%}
    <object data="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            type="application/pdf"
            width="100%" height="1000">
      <p>
        Your browser can’t display PDFs.
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}">
          Download the file instead.
        </a>
      </p>
    </object>
  {%- else -%}
    <p><em>No CV PDF specified.</em></p>
  {%- endif -%}
</div>

